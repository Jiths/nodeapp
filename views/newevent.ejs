<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title>Node.js Blog</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <style>
            body {
                padding-top: 20px;
                padding-bottom: 20px;
            }

            .jumbotron {
                margin-top: 10px;
            }
        </style>
    </head>

    <body>
        <div class="container">

            <!-- Note the commenting out with # !! :-->
             <%#- include('partials/navbar') %> 
            
             <%- include('partials/header') %> 
             
             <div class="jumbotron">
                <h1>Add an event</h1>
                <p class="lead">Do it!</p>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <form action="/addevent" method="POST">
                    <input type="text" placeholder="info" name="info">
                    <input type="text" placeholder="eventdate" name="eventdate">
                    <button type="submit">Submit</button>
                    </form>
                </div>
            </div>
            <%- include('partials/footer') %>
        </div>
    </body>

</html>
